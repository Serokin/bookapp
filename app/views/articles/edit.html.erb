<% provide(:page_title, (['Edit Article', @article.title])) %>

<nav aria-label="breadcrumb" role="navigation">
	<ol class="breadcrumb breadcrumb-body text-center" style="background: #333; border-radius: 0;">
		<li class="breadcrumb-item"><%= link_to 'Home', main_app.home_path, style: "color: #ffffff" %></li>
        <li class="breadcrumb-item"><%= link_to 'All articles', articles_path, style: "color: #ffffff" %></li>
        <li class="breadcrumb-item"><%= link_to @article.title, @article, style: "color: #ffffff" %></li>
        <li class="breadcrumb-item text-white" aria-current="page"><u><i>Edit article</i></u></li>
	</ol>
</nav>

<div class="container py-2">
    <div class="row">
        <div class="col-sm-12 book-form-border">

            <h1>Edit article</h1>
            <hr><br>

            <%= render 'form', article: @article %>
            <br>
            <%= link_to 'New article', new_article_path %> |
            <%= link_to 'Show', @article %> |
            <%= link_to 'Back', articles_path %>

        </div>
    </div>
</div>


